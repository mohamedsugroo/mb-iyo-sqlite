<div class="container">
<p id="notice"><%= notice %></p>


<h1>Posts</h1>

<% @posts.each do |post| %>
    <%= post.title.html_safe %>
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
<br>
    
<% end %>
<br>

<br>

<%= link_to 'New Post', new_post_path %>
</div>